<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">


	<!-- @author Julian Mendez -->

	<id>release</id>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<fileSet>
			<directory>${basedir}/../born-build-library/target</directory>
			<includes>
				<include>born-${project.version}-javadoc.jar</include>
			</includes>
			<outputDirectory>library</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../born-build-plugin/target</directory>
			<includes>
				<include>de.tudresden.inf.lat.born-javadoc.jar</include>
			</includes>
			<outputDirectory>plugin</outputDirectory>
		</fileSet>

	</fileSets>

	<files>

		<file>
			<source>${basedir}/../born-build-library/target/born-${project.version}.jar</source>
			<outputDirectory>library</outputDirectory>
		</file>

		<file>
			<source>${basedir}/../born-build-library/target/born-${project.version}-sources.jar</source>
			<outputDirectory>library</outputDirectory>
		</file>

		<file>
			<source>${basedir}/../born-build-standalone/target/born.jar</source>
			<outputDirectory>standalone</outputDirectory>
		</file>

		<file>
			<source>${basedir}/../born-build-plugin/target/de.tudresden.inf.lat.born.jar</source>
			<outputDirectory>plugin</outputDirectory>
		</file>

		<file>
			<source>${basedir}/../born-build-plugin/target/de.tudresden.inf.lat.born-sources.jar</source>
			<outputDirectory>plugin</outputDirectory>
		</file>

	</files>

</assembly>

